@model ExamApp.EntityLayer.DTOs.Students.StudentDTO
<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Student /</span> Add Student</h4>

<div class="row">
    <div class="col-md-12">
        <div class="card mb-4">
            <h5 class="card-header"></h5>
            <form asp-controller="Student" asp-action="Add" method="post">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="StudentNo" id="defaultFormControlInput" class="form-label">Student Number</label>
                        <input asp-for="StudentNo" type="number" class="form-control mb-3" id="defaultFormControlInput" placeholder="Enter Student Number" aria-describedby="defaultFormControlHelp">
                        <span asp-validation-for="StudentNo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" for="defaultFormControlInput" class="form-label">Name</label>
                        <input asp-for="Name" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Enter Student Name" aria-describedby="defaultFormControlHelp">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Surname" for="defaultFormControlInput" class="form-label">Surname</label>
                        <input asp-for="Surname" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Enter Student Surname" aria-describedby="defaultFormControlHelp">
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ClassNo" for="defaultFormControlInput" class="form-label">Class Number</label>
                        <input asp-for="ClassNo" type="number" class="form-control mb-3" id="defaultFormControlInput" placeholder="Enter Student Class Number" aria-describedby="defaultFormControlHelp">
                        <span asp-validation-for="ClassNo" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">Save</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
