@model List<ExamApp.EntityLayer.DTOs.Lessons.LessonDTO>
<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Lesson /</span> Lesson List</h4>
<div class="card">
    <div class="d-flex justify-content-between px-3">
        <h5 class="card-header">Lessons</h5>
        <div class="d-flex align-items-center">
            <a class="btn btn-outline-success text-success" asp-controller="Lesson" asp-action="Add">
                <i class="tf-icons bx bx-plus"></i> Add
            </a>
        </div>
    </div>

    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Lesson No</th>
                    <th>Name</th>
                    <th>Class No</th>
                    <th>Teacher</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.Id</strong></td>
                        <td>@item.LessonNo</td>
                        <td>@item.Name</td>
                        <td>@item.ClassNo</td>
                        <td>@item.TeacherName @item.TeacherSurname</td>
                        <td>
                            <a asp-controller="Lesson" asp-action="Update" asp-route-lessonId="@item.Id"><i class="bx bx-edit-alt me-1"></i></a>
                            <a asp-controller="Lesson" asp-action="Delete" asp-route-lessonId="@item.Id"><i class="bx bx-trash me-1 text-danger"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>