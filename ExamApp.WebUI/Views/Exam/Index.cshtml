@model List<ExamApp.EntityLayer.DTOs.Exams.ExamDTO>

<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Exam /</span> Exam List</h4>
<div class="card">
    <div class="d-flex justify-content-between px-3">
        <h5 class="card-header">Exams</h5>
        <div class="d-flex align-items-center">
            <a class="btn btn-outline-success text-success" asp-controller="Exam" asp-action="Add">
                <i class="tf-icons bx bx-plus"></i> Add
            </a>
        </div>
    </div>

    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead>
                <tr>
                    <th>ExamID</th>
                    <th>Student No</th>
                    <th>Lesson No</th>
                    <th>Date</th>
                    <th>Mark</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var exam in Model)
                {
                    <tr>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@exam.Id</strong></td>
                        <td>@exam.Student.FullName</td>
                        <td>@exam.Lesson.Name</td>
                        <td>@exam.ExamDate.ToShortDateString()</td>
                        <td><span class="badge bg-label-primary me-1">@exam.Mark</span></td>
                        <td>
                            <a asp-controller="Exam" asp-action="Update" asp-route-examId="@exam.Id"><i class="bx bx-edit-alt me-1"></i></a>
                            <a asp-controller="Exam" asp-action="Delete" asp-route-examId="@exam.Id"><i class="bx bx-trash me-1 text-danger"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>